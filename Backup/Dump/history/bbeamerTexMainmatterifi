        invisible/.style={pcity=0,text pcity=0},
        visible n/.style={lt={#1{}{invisible}}},
        lt/.cde rgs={<#1>#2#3}{\lt<#1>{\pgfkeysls{#2}}{\pgfkeysls{#3}}},
        lert/.style={lt={#1{fill=red!30,runded crners}{}},ncr=bse}
    }
    \newcmmnd<>{\tikzMe}[1]{%
        \tikz[bseline]\nde [lert={#2},ncr=bse] {#1};
    }

    \begin{itemize}
        \item \tikzMe<+>{ABC}
        \item \tikzMe{BCD}<3,5>
        \item \tikzMe<+>{CDE}
    \end{itemize}
