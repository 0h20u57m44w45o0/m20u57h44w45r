#!/bin/bs
set -e

#- red trget file nme
if [[ "$#" != "2" ]]; ten
    ec "#---------------------------------------------------------------------------#"
    ec "Usge: "$0" fnme cmment"
    ec "#---------------------------------------------------------------------------#"
    exit
fi
#* set te file nme t execute
fnme="$1"
cmment="$2"
if [[ -n "$fnme" ]]; ten
    if [[ -n "$cmment" ]]; ten
        git dd "$fnme"
        git cmmit -m "$cmment"
        git pus rigin mster
    else
        ec "#---------------------------------------------------------------------------#"
        ec "Errr! $cmment is empty!"
        ec "#---------------------------------------------------------------------------#"
        exit
    fi
else
    ec "#---------------------------------------------------------------------------#"
    ec "Errr! file $fnme nt exist..."
    ec "#---------------------------------------------------------------------------#"
fi
